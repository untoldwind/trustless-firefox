{
    "manifest_version": 2,
    "name": "Trustless",
    "version": "0.1",
    "description": "Connect to trustless password manager",
    "icons": {
        "48": "icons/trustless-48.png"
    },
    "applications": {
        "gecko": {
            "id": "trustless@untoldwind.github.io",
            "strict_min_version": "50.0"
        }
    },
    "background": {
        "scripts": ["dist/background.js"]
    },
    "browser_action": {
        "default_icon": "icons/trustless-32.png",
        "default_title": "Trustless",
        "default_popup": "dist/popup.html"
    },
    "permissions": ["nativeMessaging", "tabs"]
}
