{
  "manifest_version": 2,
  "name": "Trustless",
  "version": "0.1",
  "description": "Connect to trustless password manager",
  "icons": {
    "48": "icons/trustless-48.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icons/trustless-32.png",
    "default_title": "Trustless",
    "default_popup": "popup.html"
  },
  "permissions": ["nativeMessaging", "activeTab"]
}
