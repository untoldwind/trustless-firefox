{
  "name": "trustless-webextension",
  "scripts": {
    "build": "webpack --progress",
    "watch": "webpack --watch --progress",
    "clean": "rimraf dist-firefox dist-chrome",
    "package:chrome": "chromium --pack-extension=dist-chrome --pack-extension-key=dist-chrome.pem",
    "package:firefox": "web-ext -s dist-firefox sign --api-key=$AMO_JWT_ISSUER --api-secret=$AMO_JWT_SECRET",
    "format": "tsfmt -r && scssfmt --recursive src/**/*.scss && tslint -c tslint.json -p ."
  },
  "dependencies": {
    "bootstrap": "^4.1.3",
    "classnames": "^2.2.6",
    "decko": "^1.2.0",
    "linkstate": "^1.0.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-redux": "^5.0.7",
    "reactstrap": "^6.5.0",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.46",
    "@types/classnames": "^2.2.6",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/reactstrap": "^6.4.2",
    "@types/redux-actions": "^1.2.3",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^1.0.0",
    "extract-loader": "^3.0.0",
    "file-loader": "^2.0.0",
    "html-webpack-include-assets-plugin": "1.0.6",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.5.2",
    "rimraf": "^2.6.1",
    "sass-loader": "^7.0.1",
    "scssfmt": "^1.0.6",
    "ts-loader": "^5.2.2",
    "tslint": "^5.11.0",
    "typescript": "^3.1.1",
    "typescript-formatter": "^7.2.2",
    "web-ext": "^2.9.1",
    "webpack": "^4.21.0",
    "webpack-cli": "^3.1.2"
  }
}
